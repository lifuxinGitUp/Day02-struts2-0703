<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="Day02" extends="struts-default">
        <action name="*_user" class="com.lanou.action.UserAction" method="{1}">
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="login" class="com.lanou.action.ModelUserAction" method="login">
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="regist" class="com.lanou.action.ModelUserAction" method="regist">
            <!-- 如果登录成功跳转到登录界面 -->
            <result name="success">/login.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
    </package>
    <!-- 添加struts的其他配置文件 -->
    <include file="user-struts.xml"/>




</struts>